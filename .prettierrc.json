{
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "overrides": [
    {
      "files": ["SCSS/**/*.scss", "SCSS/**/*.css"],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": ["index.html"],
      "options": {
        "printWidth": 100
      }
    }
  ],
  "useTabs": false,
  "printWidth": 80,
  "trailingComma": "es5"
}
